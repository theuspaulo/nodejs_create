    <main class="container-xl p-3 d-flex flex-column gap-2">
        <div>
            <h5>Cadastrar - Agendamento de Potenciais Clientes</h5>
            <small>Sistema utilizado para agendamentos de serviços</small>
        </div>
        <form action="/cadastrar" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Nome</label>
                <input type="text" class="form-control" name="nome" id="name" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="telefone" class="form-label">Telefone</label>
                <input type="number" class="form-control" name="telefone" id="telefone">
            </div>
            <div class="mb-3">
                <label for="origem" class="form-label">Origem</label>
                <select name="origem" id="origem" class="form-select" aria-label="Default select example">
                    <option value="1" selected>Celular</option>
                    <option value="1">Telefone</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="data" class="form-label">Data de Contato</label>
                <input type="date" name="data" class="form-control" id="data">
            </div>
            <div class="mb-3">
                <label for="observacao" class="form-label">Observação</label>
                <textarea name="observacao" id="observacao" cols="30" class="form-control"></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </main>
